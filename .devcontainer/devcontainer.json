{
    "name": "Python 3 with Scikit-learn",
    "image": "nvidia/cuda:11.8.0-devel-ubuntu22.04",
    "runArgs": [
        "--gpus",
        "all"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "REditorSupport.r"
            ]
        }
    },
    "forwardPorts": [],
    "features": {
        "ghcr.io/devcontainers/features/nvidia-cuda:2": {},
        "ghcr.io/rocker-org/devcontainer-features/r-rig:latest": {},
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": [
                "languageserver",
                "data.table",
                "openxlsx",
                "parallel",
                "ggplot2",
                "pracma",
                "dgof",
                "limma"
            ], // Specify the R packages to install
            "installSystemRequirements": true // Set to true to install system dependencies via pak
        }
    },
    "onCreateCommand": [
        "sudo apt update && sudo apt install python3 python3-pip -y",
        "sudo ln -s /usr/bin/python3 /usr/bin/python"
    ],
    "postCreateCommand": [
        "python -m pip install --upgrade pip",
        "python -m pip install -r requirements.txt",
        "python scripts/download_GPL13534-11288.py"
    ]
}