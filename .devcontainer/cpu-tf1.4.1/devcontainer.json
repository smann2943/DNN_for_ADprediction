{
    "name": "Python 3 CPU - TF 1.4.1",
    "image": "./Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "REditorSupport.r"
            ]
        }
    },
    "forwardPorts": [],
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/r-rig:latest": {},
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": [
                "languageserver",
                "data.table",
                "openxlsx",
                "parallel",
                "ggplot2",
                "pracma",
                "dgof",
                "limma"
            ], // Specify the R packages to install
            "installSystemRequirements": true // Set to true to install system dependencies via pak
        }
    },
    "updateContentCommand": [
        "python scripts/download_GPL13534-11288.py",
        "python -m pip install -r requirements.txt"
    ]
}